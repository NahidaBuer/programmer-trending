# 详细说明见 ./app/core/config.py

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./programmer_trending.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost/programmer_trending

# GEMINI API
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
AI_SUMMARY_MAX_LENGTH=200
AI_SUMMARY_MAX_RETRIES=3

# Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=10
AI_RATE_LIMIT_PER_DAY=250
AI_ENABLE_RATE_LIMITING=True
AI_RATE_LIMIT_RETRY_DELAY=60

# Summary Generator
SUMMARY_CONCURRENCY=1

# Crawler Configuration
CRAWL_INTERVAL_MINUTES=120

# Task Scheduler
ENABLE_CRAWL_SCHEDULER=True
ENABLE_SUMMARY_SCHEDULER=True

# Application Configuration
APP_NAME="Programmer Trending Backend"
APP_VERSION=0.1.0
DEBUG=True

# CORS Configuration
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=True

# Log Level
LOG_LEVEL=INFO